name = "apcs-auth-api"
main = "auth-api.js"
compatibility_date = "2024-01-01"

# D1 數據庫綁定
[[d1_databases]]
binding = "DB"
database_name = "apcs-course-db"
database_id = "填入步驟 3.2 複製的 database_id"

# KV 綁定
[[kv_namespaces]]
binding = "COURSE_ACCESS"
id = "填入步驟 3.3 複製的 KV id"

# 環境變數
[vars]
ALLOWED_ORIGINS = "http://localhost:8000,https://apcs-space.pages.dev"
